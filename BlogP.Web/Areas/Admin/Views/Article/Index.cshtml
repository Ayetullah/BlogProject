@model List<ArticleDto>
    <div class="container-xxl flex-grow-0 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi / </span> Makaleler
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">Makale Ekle <i class="bx bx-plus"></i></a>
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                @*<tfood>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfood>*@
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <th>@item.Title</th>
                            <th>@item.Category?.Name</th>
                            <th>@item.CreatedDate</th>
                            <th>@item.CreatedBy</th>
                            <th>@(item.IsDeleted ? "Aktif Değil" : "Aktif")</th>
                            <th>
                                <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-action="Update" asp-area="Admin" asp-controller="Article" asp-route-articleId="@item.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-action="SafeDelete" asp-area="Admin" asp-controller="Article" asp-route-articleId="@item.Id"><i class="bx bxs-minus-circle"></i></a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}